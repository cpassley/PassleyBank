<?xml version="1.0" encoding="utf-8"?>
<!-- activity_savings_transactions.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/titleSavingsTransactionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passley Bank"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/savingsTransactionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savings Transactions History"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/titleSavingsTransactionsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- 6 transaction buttons -->
    <Button
        android:id="@+id/savingsTransactionButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/18/23 Best Buy $350.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/savingsTransactionsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/savingsTransactionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/19/23 Publix $200.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/savingsTransactionButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/savingsTransactionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/19/23 Whole Foods $350.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/savingsTransactionButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/savingsTransactionButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/20/23 Ebay $100.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/savingsTransactionButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/savingsTransactionButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/21/23 Nestle $200.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/savingsTransactionButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/savingsTransactionButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/22/23 Microsoft $200.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/savingsTransactionButton5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/savingsToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/savingsToAccountsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accounts"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />
</RelativeLayout>
