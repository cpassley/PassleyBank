<?xml version="1.0" encoding="utf-8"?>
<!-- activity_checking_transactions.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/titleCheckingTransactionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passley Bank"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/checkingTransactionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking Transactions History"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/titleCheckingTransactionsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- 6 transaction buttons -->
    <Button
        android:id="@+id/transactionButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/18/23 Amazon $250.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/checkingTransactionsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/transactionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/19/23 Walmart $150.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/transactionButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/transactionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/19/23 Target $200.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/transactionButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/transactionButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/20/23 Apple $300.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/transactionButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/transactionButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/21/23 Samsung $300.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/transactionButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/transactionButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/22/23 Xfinity $250.00"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_below="@id/transactionButton5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/checkingToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/checkingToAccountsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accounts"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />
</RelativeLayout>

